<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Use the Taco-Tracker to create and eat as many tacos as you desire!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Tacos Eaten</h2>
            <ul>
                {{#each tacos}}
                {{#unless devoured}}
                {{ > tacos/taco-block devoured=true }}
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <img src="/assets/img/taco.png">
        </div>
        <div class="col-md-4">
            <h2>Tacos Left</h2>
            <ul>
                {{#each tacos}}
                {{#if devoured}}
                {{ > tacos/taco-block devoured=false }}
                <button class="btn devour" type="submit">EAT</button>
            </ul>
            <li>
                {{taco_name}}
            </li>
        </div>
    </div>
    
    <form class="form-group">
        <div class="form-group">
            <label for="ca">Taco Name:</label>
            <input type="text" id="ca" name="name">
        </div>

        <button class="submit" type="submit">Add a Taco!</button>
    </form>
</div>