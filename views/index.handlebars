<h1>Taco-Tracker!</h1>

<h2>Eaten Tacos</h2>

<ul>
  {{#each tacos}}
    {{#unless devoured}}
      {{> tacos/taco-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Available Tacos</h2>

<ul>
  {{#each tacos}}
    {{#if devoured}}
      {{> tacos/taco-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Taco</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Taco Name:</label>
    <input type="text" id="ca" name="taco_name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten!<br>
    <input type="radio" name="devoured" value="0"> Still Available
  </div>

  <button type="submit">Add Taco</button>
</form>
